<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainRoommatesActivity">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainRoommatesActivity">
        <!-- background eklenecek-->

        <Button
            android:id="@+id/profile_pic_main"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"
            android:background="@drawable/bar_photo"/>
            <!--android:onClick="open_profile"-->

        <TextView
            android:id="@+id/roombti"
            android:layout_width="110dp"
            android:layout_height="29dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="151dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:text="@string/roombti"
            android:textAppearance="@style/roombti"
            android:gravity="center_horizontal|center_vertical"
            />

        <Button
            android:id="@+id/menu_option"
            android:layout_width="32dp"
            android:layout_height="19dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="356dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="42dp"
            android:background="@drawable/menu_bar"
            android:onClick="open_menu"
            />



        <View
            android:id="@+id/profile_photo"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="177dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="119dp"
            android:background="@drawable/bar_photo"
            />

        <TextView
            android:id="@+id/dm_name"
            android:layout_width="76dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="168dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="182dp"
            android:text="Mert Ã–zkaya"
            android:textAppearance="@style/dm_name"
            android:gravity="center_horizontal|center_vertical"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:background="@drawable/dm_background"
            android:id="@+id/chatRecyclerView"
            android:layout_above="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            />
        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="100">

            <EditText
                android:id="@+id/messagebox"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="85"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/chat_bar"
                android:hint="Type a message..."/>

            <ImageView
                android:id="@+id/btn_send"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/chat_send"
                android:layout_weight="20"/>

        </LinearLayout>



    </RelativeLayout>
</RelativeLayout>