<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/gradient"
        android:layout_width="644dp"
        android:layout_height="610dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/gradient"
        android:gravity="center" />

    <TextView
        android:id="@+id/roombtiLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="@string/roombtiLogo_text"
        android:textAppearance="@style/roombtiLogo_text_theme"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
        android:text="@string/slogan_text"
        android:textAppearance="@style/slogan_text_theme"
        android:gravity="center"
        />

    <View
        android:id="@+id/mbti_rect"
        android:layout_width="376dp"
        android:layout_height="553dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="173dp"
        android:layout_marginBottom="191dp"
        android:background="@drawable/mbti_rect"
        android:gravity="center" />



    <!--************************* Housemate related *****************************-->
    <TextView
        android:id="@+id/no_of_housemates"
        android:layout_width="195dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="213dp"
        android:text="@string/no_of_housemates"
        android:textAppearance="@style/homeseeker_info_theme"
        android:gravity="center_vertical"
        />

    <EditText
        android:id="@+id/housemate_small_1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="248dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="195dp"

        android:hint="@string/seeker_housemate_no_min"
        android:textColorHint="@color/light_gray"
        android:textAppearance="@style/seeker_renter_intermediate_ghost"
        android:inputType="text"
        android:singleLine="true"

        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:padding="10dp"

        android:background="@drawable/seeker_renter_small_edit"
        />
    <EditText
        android:id="@+id/housemate_small_2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="317dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="195dp"

        android:hint="@string/seeker_housemate_no_max"
        android:textColorHint="@color/light_gray"
        android:textAppearance="@style/seeker_renter_intermediate_ghost"
        android:inputType="text"
        android:singleLine="true"

        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:padding="10dp"

        android:background="@drawable/seeker_renter_small_edit"
        />

    <!--************************************************************************-->

    <!--************************* Location related *****************************-->
    <TextView
        android:id="@+id/seeker_location"
        android:layout_width="73dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="287dp"
        android:text="@string/location"
        android:textAppearance="@style/homeseeker_info_theme"
        android:gravity="center_vertical"
        />

    <EditText
        android:id="@+id/seeker_location_info"
        android:layout_width="247dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="126dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="269dp"

        android:hint="@string/seeker_location_ghost"
        android:textColorHint="@color/light_gray"
        android:textAppearance="@style/seeker_renter_intermediate_ghost"
        android:inputType="text"
        android:singleLine="true"

        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:padding="10dp"

        android:background="@drawable/seeker_renter_big_edit"

        />
    <!--************************************************************************-->

    <!--************************* Budget related *****************************-->

    <TextView
        android:id="@+id/seeker_budget"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="361dp"
        android:text="@string/budget"
        android:textAppearance="@style/homeseeker_info_theme"
        android:gravity="center_vertical"
        />

    <EditText
        android:id="@+id/housemate_small_3"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="118dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="343dp"

        android:hint="@string/seeker_housemate_no_min"
        android:textColorHint="@color/light_gray"
        android:textAppearance="@style/seeker_renter_intermediate_ghost"
        android:inputType="text"
        android:singleLine="true"

        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:padding="10dp"

        android:background="@drawable/seeker_renter_small_edit"
        />

    <EditText
        android:id="@+id/housemate_small_4"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="187dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="343dp"

        android:hint="@string/seeker_housemate_no_max"
        android:textColorHint="@color/light_gray"
        android:textAppearance="@style/seeker_renter_intermediate_ghost"
        android:inputType="text"
        android:singleLine="true"

        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:padding="10dp"

        android:background="@drawable/seeker_renter_small_edit"
        />

    <!--************************************************************************-->

    <!--************************* Smoking related *****************************-->

    <TextView
        android:id="@+id/seeker_smoker"
        android:layout_width="118dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="435dp"
        android:text="@string/smoker_info"
        android:textAppearance="@style/homeseeker_info_theme"
        android:gravity="center_vertical"
        />


    <RadioGroup
        android:id="@+id/smoke_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="171dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="430dp">


        <RadioButton
            android:id="@+id/radio_smoke_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:text="Yes"
            android:textAppearance="@style/mbti_test_text_theme"
            android:buttonTint="#337CFF" />

        <RadioButton
            android:id="@+id/radio_smoke_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:text="No"
            android:textAppearance="@style/mbti_test_text_theme"
            android:layout_marginStart="16dp"
            android:buttonTint="#337CFF" />
    </RadioGroup>

    <!--**************************************************************************-->

    <!--**************************** Pet related ****************************-->

    <TextView
        android:id="@+id/seeker_pet"
        android:layout_width="148dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="508dp"
        android:text="@string/pet_info"
        android:textAppearance="@style/homeseeker_info_theme"
        android:gravity="center_vertical"
        />


    <RadioGroup
        android:id="@+id/pet_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="201dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="503dp">

        <RadioButton
            android:id="@+id/radio_pet_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:textAppearance="@style/mbti_test_text_theme"
            android:text="Yes"
            android:buttonTint="#337CFF" />

        <RadioButton
            android:id="@+id/radio_pet_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:textAppearance="@style/mbti_test_text_theme"
            android:text="No"
            android:layout_marginStart="16dp"
            android:buttonTint="#337CFF" />
    </RadioGroup>



    <!--**************************************************************************-->

    <!--**************************** University related ****************************-->

    <TextView
        android:id="@+id/seeker_university"
        android:layout_width="83dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="582dp"
        android:text="@string/uni_info"
        android:textAppearance="@style/homeseeker_info_theme"
        android:gravity="center_vertical"
        />
    <EditText
        android:id="@+id/seeker_uni_info_ghost"
        android:layout_width="237dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="136dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="564dp"

        android:hint="@string/seeker_uni_ghost"
        android:textColorHint="@color/light_gray"
        android:textAppearance="@style/seeker_renter_intermediate_ghost"
        android:inputType="text"
        android:singleLine="true"

        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:padding="10dp"

        android:background="@drawable/seeker_renter_big_edit"
        />

    <!--**************************************************************************-->

    <Button
        android:id="@+id/rectangle_7"
        android:layout_width="154dp"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="126dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/mbti_next_button"
        android:gravity="center"
        android:onClick="home_seeker_next"
        android:text="@string/next_text"
        android:textAppearance="@style/next_text_theme" />
</RelativeLayout>