<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeSeekerActivity">
    <RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/homeseeker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <View
            android:id="@+id/gradient"
            android:layout_width="644dp"
            android:layout_height="610dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/gradient"
            android:gravity="center" />

        <TextView
            android:id="@+id/roombtiLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp"
            android:text="@string/roombtiLogo_text"
            android:textAppearance="@style/roombtiLogo_text_theme"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="109dp"
            android:text="@string/slogan_text"
            android:textAppearance="@style/slogan_text_theme"
            android:gravity="center"
            />

        <View
            android:id="@+id/houserenter_rect"
            android:layout_width="376dp"
            android:layout_height="553dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="173dp"
            android:background="@drawable/houserenter_rect"
            />




        <!--************************* Housemate related *****************************-->
        <TextView
            android:id="@+id/no_of_housemates"
            android:layout_width="195dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="213dp"
            android:text="@string/number_of_housemate_text"
            android:textAppearance="@style/register_text_theme"
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/seeker_housemate_min_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_marginStart="248dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="195dp"

            android:hint="@string/min_text"
            android:textColorHint="@color/ghost_gray"
            android:textAppearance="@style/register_text_theme"
            android:inputType="text"
            android:singleLine="true"

            android:gravity="start|center_vertical"
            android:textAlignment="viewStart"
            android:padding="11dp"

            android:background="@drawable/seeker_renter_small_edit"
            />
        <EditText
            android:id="@+id/seeker_housemate_max_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_marginStart="317dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="195dp"

            android:hint="@string/max_text"
            android:textColorHint="@color/ghost_gray"
            android:textAppearance="@style/register_text_theme"
            android:inputType="text"
            android:singleLine="true"

            android:gravity="start|center_vertical"
            android:textAlignment="viewStart"
            android:padding="11dp"

            android:background="@drawable/seeker_renter_small_edit"
            />

        <!--************************************************************************-->

        <!--************************* Location related *****************************-->
        <TextView
            android:id="@+id/seeker_location"
            android:layout_width="73dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="287dp"
            android:text="@string/location_text"
            android:textAppearance="@style/register_text_theme"
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/seeker_location_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="@string/city_mun_text"
            android:textColorHint="@color/ghost_gray"
            android:textAppearance="@style/register_text_theme"
            android:inputType="text"
            android:singleLine="true"

            android:layout_alignParentStart="true"
            android:layout_marginStart="126dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="269dp"


            android:gravity="start|center_vertical"
            android:textAlignment="viewStart"
            android:padding="18dp"

            android:background="@drawable/seeker_renter_big_edit"

            />
        <!--************************************************************************-->

        <!--************************* Budget related *****************************-->

        <TextView
            android:id="@+id/seeker_budget"
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="361dp"
            android:text="@string/budget_text"
            android:textAppearance="@style/register_text_theme"
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/houseseeker_min_budget_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="118dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="343dp"

            android:hint="@string/min_text"
            android:textColorHint="@color/ghost_gray"
            android:textAppearance="@style/register_text_theme"
            android:inputType="text"
            android:singleLine="true"

            android:gravity="start|center_vertical"
            android:textAlignment="viewStart"
            android:padding="11dp"

            android:background="@drawable/seeker_renter_small_edit"
            />

        <EditText
            android:id="@+id/houseseeker_max_budget_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_marginStart="187dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="343dp"

            android:hint="@string/max_text"
            android:textColorHint="@color/ghost_gray"
            android:textAppearance="@style/register_text_theme"
            android:inputType="text"
            android:singleLine="true"

            android:gravity="start|center_vertical"
            android:textAlignment="viewStart"
            android:padding="11dp"

            android:background="@drawable/seeker_renter_small_edit"
            />

        <!--************************************************************************-->

        <!--************************* Smoking related *****************************-->

        <TextView
            android:id="@+id/seeker_smoker"
            android:layout_width="118dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="435dp"
            android:text="@string/seeker_smoke_text"
            android:textAppearance="@style/register_text_theme"
            android:gravity="center_vertical"
            />


        <RadioGroup
            android:id="@+id/smoke_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_marginStart="171dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="430dp">


            <RadioButton
                android:id="@+id/houseseeker_smoke_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:text="@string/yes_text"
                android:textAppearance="@style/register_text_theme"
                android:buttonTint="#0C33FF" />

            <RadioButton
                android:id="@+id/houseseeker_smoke_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:text="@string/no_text"
                android:textAppearance="@style/register_text_theme"
                android:layout_marginStart="16dp"
                android:buttonTint="#0C33FF" />
        </RadioGroup>

        <!--**************************************************************************-->

        <!--**************************** Pet related ****************************-->

        <TextView
            android:id="@+id/seeker_pet"
            android:layout_width="148dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="508dp"
            android:text="@string/seeker_pet_text"
            android:textAppearance="@style/register_text_theme"
            android:gravity="center_vertical"
            />


        <RadioGroup
            android:id="@+id/pet_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_marginStart="201dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="503dp">

            <RadioButton
                android:id="@+id/houseseeker_pet_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:textAppearance="@style/mbti_test_text_theme"
                android:text="@string/yes_text"
                android:buttonTint="#0C33FF" />

            <RadioButton
                android:id="@+id/houseseeker_pet_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:textAppearance="@style/mbti_test_text_theme"
                android:text="@string/no_text"
                android:layout_marginStart="16dp"
                android:buttonTint="#0C33FF" />
        </RadioGroup>



        <!--**************************************************************************-->

        <!--**************************** University related ****************************-->

        <TextView
            android:id="@+id/seeker_university"
            android:layout_width="83dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="582dp"
            android:text="@string/university_text"
            android:textAppearance="@style/register_text_theme"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/houseseeker_university_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="136dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="564dp"

            android:hint="@string/optional_text"
            android:textColorHint="@color/ghost_gray"
            android:textAppearance="@style/register_text_theme"
            android:inputType="text"
            android:singleLine="true"

            android:gravity="start|center_vertical"
            android:textAlignment="viewStart"
            android:padding="18dp"

            android:background="@drawable/seeker_renter_big_edit"
            />

        <!--**************************************************************************-->

        <Button
            android:id="@+id/homeseeker_next_button"
            android:layout_width="154dp"
            android:layout_height="39dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="672dp"
            android:background="@drawable/mbti_next_button"
            android:gravity="center"
            android:onClick="home_seeker_next"
            android:text="@string/next_text"
            android:textAppearance="@style/next_text_theme" />


    </RelativeLayout>
</ScrollView>